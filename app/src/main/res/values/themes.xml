<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lembrete" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul_primario</item>
        <item name="colorPrimaryVariant">@color/azul_secundario</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/azul_secundario</item>
        <item name="colorSecondaryVariant">@color/azul_primario</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@style/Background</item>
    </style>

    <style name="Background" parent="Theme.MaterialComponents">
        <item name="background">@color/dark_primary</item>
    </style>
</resources>