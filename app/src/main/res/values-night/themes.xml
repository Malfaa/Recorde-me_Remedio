<resources>
    <!-- Base application theme. -->
    <style name="Theme.Remedio" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/day_primary_variant</item>
        <item name="colorPrimaryVariant">@color/night_primary</item>

        <item name="colorOnPrimary">@color/text_color_dark</item><!--text_color_dark-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/night_primary</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>

        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        
        <item name="android:colorBackground">@color/night_primary_dark</item>
        <item name="floatingActionButtonStyle">@style/FloatingAction</item>
        <item name="cardViewStyle">@style/card_lembrete</item>
        <item name="imageButtonStyle">@style/ImageButton</item>

    </style>

    <style name="text_view" parent="TextAppearance.AppCompat">

        <item name="android:layout_marginTop">@dimen/distancia_item</item>
        <!--item name="android:layout_marginStart">@dimen/distancia_item</item-->
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <style name="nota_text_view" parent="TextAppearance.AppCompat">
        <!--item name="android:background">@drawable/night_text_view_drawable</item-->
        <item name="android:maxLines">4</item>
        <item name="autoSizeMinTextSize">14sp</item>
        <item name="autoSizeMaxTextSize">18sp</item>
        <item name="android:layout_marginTop">@dimen/distancia_item</item>
        <item name="android:layout_marginStart">@dimen/distancia_item_edittext</item>
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <style name="caixa_expandida" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@drawable/outline_nota_item_lembrete</item>
    </style>

    <style name="adc_alt_textview" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginTop">@dimen/margin_top_for_hora_inicial</item>
        <!--item name="android:layout_marginStart">@dimen/distancia_item_edittext</item-->
        <item name="android:background">@drawable/night_add_alt_text_box</item>

    </style>

    <style name="textView_text_color" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <style name="lembrete" parent="">
        <item name="android:layout_marginTop">@dimen/distancia_item_edittext</item>
        <item name="android:layout_marginStart">@dimen/distancia_item</item>
        <item name="android:layout_marginEnd">@dimen/distancia_item</item>
        <item name="android:background">@drawable/night_lembrete_text_view_drawable</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="card_lembrete" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginTop">@dimen/distancia_item_edittext</item>
        <item name="android:layout_marginStart">@dimen/distancia_item_edittext</item>
        <item name="android:layout_marginEnd">@dimen/distancia_item_edittext</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FloatingAction" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/AppShapeAppearance.SmallComponent</item>
    </style>

    <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="imageButtonStyle">@style/expand_button</item>
        <item name="android:opacity">transparent</item>
        <item name="backgroundColor">@color/night_primary_light</item>
    </style>

    <style name="Botao" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/night_primary</item>
    </style>

    <style name="frame" parent="">
        <item name="android:src">@drawable/ic_frame_night</item>
    </style>
    <style name="clock" parent="">
        <item name="android:src">@drawable/ic_clock_night</item>
    </style>

    <style name="info_image" parent="">
        <item name="android:src">@drawable/info_white</item>
    </style>
</resources>