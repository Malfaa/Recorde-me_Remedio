<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lembrete" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night_primary_variant</item>
        <item name="colorPrimaryVariant">@color/night_primary</item>

        <item name="colorOnPrimary">@color/cream_text</item><!--white-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>

        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        
        <item name="android:colorBackground">@color/night_primary_dark</item>
        <item name="floatingActionButtonStyle">@style/FloatingAction</item>
        <item name="cardViewStyle">@style/card_lembrete</item>

    </style>

    <style name="text_view" parent="TextAppearance.AppCompat">

        <item name="android:layout_marginTop">@dimen/distancia_item</item>
        <item name="android:layout_marginStart">@dimen/distancia_item</item>
        <item name="android:textColor">@color/cream_text</item>
    </style>

    <style name="nota_text_view" parent="TextAppearance.AppCompat">
        <!--item name="android:background">@drawable/night_text_view_drawable</item-->
        <item name="android:maxLines">4</item>
        <item name="android:layout_marginTop">@dimen/distancia_item</item>
        <item name="android:layout_marginStart">@dimen/distancia_item_edittext</item>
        <item name="android:textColor">@color/cream_text</item>
    </style>

    <style name="caixa_expandida" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@color/caixa_expandida_bg_dark</item>
    </style>

    <style name="adc_alt_textview" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginTop">@dimen/distancia_item_edittext</item>
        <item name="android:layout_marginStart">@dimen/distancia_item_edittext</item>
        <item name="android:background">@drawable/night_add_alt_text_box</item>

    </style>

    <style name="lembrete" parent="">
        <item name="android:layout_marginTop">@dimen/distancia_item_edittext</item>
        <item name="android:layout_marginStart">@dimen/distancia_item</item>
        <item name="android:layout_marginEnd">@dimen/distancia_item</item>
        <item name="android:background">@drawable/night_lembrete_text_view_drawable</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="card_lembrete" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginTop">@dimen/distancia_item_edittext</item>
        <item name="android:layout_marginStart">@dimen/distancia_item_edittext</item>
        <item name="android:layout_marginEnd">@dimen/distancia_item_edittext</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FloatingAction" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/AppShapeAppearance.SmallComponent</item>
    </style>
</resources>