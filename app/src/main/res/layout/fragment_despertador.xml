<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/tela"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/imagem"
            android:layout_marginTop="@dimen/ad_dimen_height"
            style="@style/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/remedioDespertador"
            style="@style/despertadorFont"
            android:layout_marginTop="@dimen/n_distancia_itens"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/remedio" />

        <TextView
            android:id="@+id/notaDespertador"
            style="@style/notaFont"
            android:layout_marginTop="@dimen/n_distancia_itens"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/nota" />

        <TextView
            android:id="@+id/horaDespertador"
            style="@style/despertadorFont"
            android:layout_marginTop="@dimen/n_distancia_itens"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/hora"/>

        <TextView
            android:id="@+id/info"
            style="@style/dismissFont"
            android:layout_marginTop="@dimen/ad_dimen_height"
            android:layout_gravity="center"
            android:text="@string/dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/dispensar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/dispensar_color"
            android:layout_marginTop="@dimen/n_distancia_itens"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_dispensar_alarme_icone"
            android:contentDescription="@string/Ã­cone_dismiss" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>