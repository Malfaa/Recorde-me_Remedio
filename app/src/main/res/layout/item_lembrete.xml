<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="item"
            type="com.malfaa.lembrete.room.entidade.ItemEntidade" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lembrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distancia_item_edittext"
        style="@style/fundo">


        <TextView
            android:id="@+id/remedio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/s_distancia_itens"
            android:layout_marginTop="@dimen/distancia_item"
            android:layout_marginEnd="@dimen/n_distancia_itens"
            android:background="@drawable/edittext_corner_radius"
            android:text="@string/remedio"
            app:layout_constraintEnd_toStartOf="@+id/inicio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/n_distancia_itens"
            android:text="@string/iniciou"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/remedio" />

        <TextView
            android:id="@+id/inicioValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_corner_radius"
            android:minWidth="@dimen/dimen_box_normal_width"
            android:text="@string/iniciou_em"
            android:layout_marginTop="@dimen/distancia_item_textos"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/inicio"
            app:layout_constraintStart_toStartOf="@+id/inicio"
            app:layout_constraintTop_toBottomOf="@+id/inicio" />

        <TextView
            android:id="@+id/termina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distancia_item"
            android:text="@string/termina"
            app:layout_constraintEnd_toEndOf="@+id/inicioValor"
            app:layout_constraintStart_toStartOf="@+id/inicioValor"
            app:layout_constraintTop_toBottomOf="@+id/inicioValor" />

        <TextView
            android:id="@+id/terminaValor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distancia_item_textos"
            android:layout_marginBottom="@dimen/distancia_item"
            android:background="@drawable/edittext_corner_radius"
            android:textAlignment="center"
            android:text="@string/termina_em"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/termina"
            app:layout_constraintStart_toStartOf="@+id/termina"
            app:layout_constraintTop_toBottomOf="@+id/termina" />

        <TextView
            android:id="@+id/horario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_corner_radius"
            android:layout_marginTop="@dimen/distancia_item_edittext"
            android:text="@string/seis_em_seis"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/remedio"
            app:layout_constraintTop_toTopOf="@+id/nota" />

        <TextView
            android:id="@+id/data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distancia_item"
            android:background="@drawable/edittext_corner_radius"
            android:text="@string/uma_semana"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/nota"
            app:layout_constraintEnd_toEndOf="@+id/horario"
            app:layout_constraintStart_toStartOf="@+id/horario"
            app:layout_constraintTop_toBottomOf="@+id/horario" />

        <TextView
            android:id="@+id/nota"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/distancia_item"
            android:layout_marginTop="@dimen/distancia_item"
            android:background="@drawable/edittext_corner_radius"
            android:text="@string/nota"
            app:layout_constraintBottom_toBottomOf="@+id/terminaValor"
            app:layout_constraintEnd_toEndOf="@+id/remedio"
            app:layout_constraintStart_toEndOf="@+id/horario"
            app:layout_constraintTop_toBottomOf="@+id/remedio" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
