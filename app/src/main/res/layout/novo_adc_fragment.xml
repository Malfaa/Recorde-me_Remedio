<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools">

<data>
    <variable
        name="viewModel"
        type="com.malfaa.lembrete.viewmodel.AdicionarViewModel" />
</data>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".fragment.AdicionarFragment">


        <TextView
            android:id="@+id/remedioTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/lembrete_font_size"
            android:layout_marginTop="@dimen/distancia_entre_itens"
            android:text="@string/remedio"
            android:textColor="#616161"
            android:textSize="@dimen/font_adicao" />

        <EditText
            android:id="@+id/campoRemedio"
            android:layout_width="match_parent"
            android:drawableStart="@drawable/ic_pill"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/distancia_item_edittext"
            android:maxLines="1"
            android:maxWidth="100dp"
            android:autofillHints="no"
            android:textAlignment="center"
            style="@style/adc_alt_textview"
            android:ems="10"
            android:inputType="text"
            android:minHeight="@dimen/dimen_box_default_height"
            tools:ignore="LabelFor,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/horaInicialText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/lembrete_font_size"
            android:layout_marginTop="@dimen/distancia_entre_itens"
            android:text="@string/hora_inicial"
            android:textColor="#616161"
            android:textSize="@dimen/font_adicao" />

        <TextView
            android:id="@+id/horarioInicial"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/dimen_box_default_width"
            android:layout_height="@dimen/dimen_box_default_height"
            android:textAlignment="center"
            android:textSize="@dimen/font_adicao"
            style="@style/adc_alt_textview"
            android:text="" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/caixaExteriorHora"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/caixaInteriorHora"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/distancia_item_edittext"
                android:layout_marginEnd="@dimen/distancia_entre_itens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/horaText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/distancia_item_edittext"
                    android:text="@string/hora"
                    android:textColor="#616161"
                    android:textSize="@dimen/font_adicao" />

                <Spinner
                    android:id="@+id/horaSpinner"
                    android:minWidth="@dimen/dimen_box_default_width"
                    android:layout_width="wrap_content"
                    android:visibility="visible"
                    android:layout_height="@dimen/dimen_box_default_height"
                    android:layout_marginTop="@dimen/distancia_item_edittext"
                    android:backgroundTint="@color/secondary"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:contentDescription="@string/descricaoSpinnerHora" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/horaEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_box_default_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/distancia_item_edittext"
                    android:inputType="time"
                    android:minWidth="50dp"
                    android:textAlignment="center"
                    android:visibility="gone" />



            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/caixaInteriorHoraCustom"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/distancia_entre_itens"
                android:layout_marginStart="@dimen/distancia_entre_itens"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/customTextHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/font_adicao_small"
                    android:layout_marginTop="@dimen/distancia_entre_itens"
                    android:text="@string/customizar"
                    android:textColor="#616161" />


                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/customHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:textOff="@string/nao"
                    android:textOn="@string/sim"
                    tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/caixaExteriorData"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/caixaInteriorData"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/distancia_item_edittext"
                android:layout_marginEnd="@dimen/distancia_entre_itens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/distancia_item_edittext"
                    android:text="@string/data"
                    android:textColor="#616161"
                    android:textSize="@dimen/font_adicao_small" />

                <Spinner
                    android:id="@+id/dataSpinner"
                    android:minWidth="@dimen/dimen_box_default_width"
                    android:layout_width="wrap_content"
                    android:drawableStart="@drawable/ic_calendar"
                    android:layout_height="@dimen/dimen_box_default_height"
                    android:textAlignment="center"
                    android:backgroundTint="@color/secondary"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/distancia_item_edittext"
                    android:contentDescription="@string/descricaoSpinnerData" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/dataEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_box_default_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/distancia_item_edittext"
                    android:inputType="number"
                    android:minWidth="120dp"
                    android:textAlignment="center"
                    android:visibility="gone" />


            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/caixaInteriorDataCustom"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/distancia_entre_itens"
                android:layout_marginStart="@dimen/distancia_entre_itens"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/customTextData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/distancia_entre_itens"
                    android:text="@string/customizar"
                    android:textColor="#616161"
                    android:textSize="@dimen/font_adicao_small" />


                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/customData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:textOff="@string/nao"
                    android:textOn="@string/sim"
                    tools:ignore="TouchTargetSizeCheck" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <TextView
            android:id="@+id/notaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/lembrete_font_size"
            android:layout_marginTop="@dimen/distancia_entre_itens"
            android:text="@string/nota"
            android:textColor="#616161"
            android:textSize="@dimen/font_adicao" />

        <EditText
            android:id="@+id/campoNota"
            android:layout_width="match_parent"
            android:layout_height="@dimen/l_distancia_itens"
            android:layout_marginEnd="@dimen/distancia_item_edittext"
            android:layout_marginBottom="@dimen/distancia_entre_itens"
            android:maxLines="1"
            android:maxWidth="100dp"
            android:drawableStart="@drawable/ic_notes"
            style="@style/adc_alt_textview"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="text"
            tools:ignore="LabelFor,SpeakableTextPresentCheck" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/caixaDosBotoes"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/lembrete_dist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/retornar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/distancia_entre_remedio_e_restam"
                android:layout_marginEnd="@dimen/distancia_entre_itens"
                android:backgroundTint="@color/night_primary_light"
                android:text="@string/retornar"
                android:textColor="#F5F5F5"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/adicionar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/distancia_entre_itens"
                android:layout_marginEnd="@dimen/distancia_entre_remedio_e_restam"
                android:text="@string/adicionar"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <com.google.android.gms.ads.AdView
            android:id="@+id/adicionar_adView"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>
</layout>